<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://s3-us-west-2.amazonaws.com/flx-editorial-wordpress/wp-content/uploads/2018/03/13153742/RT_300EssentialMovies_700X250.jpg);">
  <div class="container">
    <h1>MOVIE WATCH LIST</h1>
    <a class="button-red" href="#">Create New List</a>
  </div>
</div>

<div class="container">
  <div class="container-title">
    <h5 class="title">YOUR LISTS</h5>
  </div>
  <div class="container-list" >
        <% @lists.each do |list| %>
        <div class="card-list" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : image_path('http://placehold.jp/400x300.png') %>)">
          <%= link_to list_path(list) do %>
          <%= list.name %>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



